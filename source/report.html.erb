---
title: Report A Problem
---

<!--*****************************************************-->
<div id="reportsection" class="container">
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
			<form class="form-horizontal">
			<fieldset>

			<!-- Form Name -->
			<legend>Create a Report</legend>

			<!-- Select Basic -->
			<div class="form-group">
			    <select id="city" name="city" class="form-control">
			      <option value="1">Select A City</option>
			      <option value="2">Option two</option>
			    </select>
			</div>

			<!-- Select Basic -->
			<div class="form-group">
			    <select id="category" name="category" class="form-control">
			      <option value="1">Select a Category</option>
			      <option value="2">Option two</option>
			    </select>
			</div>

			<!-- Textarea -->
			<div class="form-group">
			    <textarea class="form-control" id="location" name="location">Incident Location</textarea>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <input id="name" name="name" type="text" placeholder="Name" class="form-control input-md">
			</div>

			<!-- Text input-->
			<div class="form-group"> 
			  <input id="email" name="email" type="text" placeholder="Email" class="form-control input-md">
  			</div>

			<!-- Text input-->
			<div class="form-group">
			  <input id="phone" name="phone" type="text" placeholder="Phone Number" class="form-control input-md">
			</div>

			<!-- Textarea -->
			<div class="form-group">                    
			    <textarea class="form-control" id="description" name="description">Description</textarea>
			</div>

			<!-- Button (Double) -->
			<div class="form-group buttongrp">
			  <label class="col-md-4 control-label" for="upload"></label>
			  <div class="col-md-10">
			    <button id="upload" name="upload" class="btn btn-default uploadbtn"><i class="fa fa-camera"></i> UPLOAD PHOTO OR VIDEO</button>
			    <button id="report" name="report" class="btn btn-default reportbtn">REPORT IT</button>
			  </div>
			</div>

			</fieldset>
			</form>
		</div>
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
			<%= partial "reports" %>
		</div>
	</div>
</div>
<!--*****************************************************-->